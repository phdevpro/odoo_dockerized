<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_auto_test_tree" model="ir.ui.view">
        <field name="name">auto.test.tree</field>
        <field name="model">auto.test</field>
        <field name="arch" type="xml">
            <list string="Auto Test">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_auto_test_form" model="ir.ui.view">
        <field name="name">auto.test.form</field>
        <field name="model">auto.test</field>
        <field name="arch" type="xml">
            <form string="Auto Test">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_auto_test" model="ir.actions.act_window">
        <field name="name">Auto Test</field>
        <field name="res_model">auto.test</field>
        <field name="view_mode">list,form</field>
        <field name="views" eval="[(ref('view_auto_test_tree'), 'list'), (ref('view_auto_test_form'), 'form')]"/>
    </record>

    <!-- Top-level menu to be easily visible -->
    <menuitem id="menu_auto_test_root" name="Auto Test" sequence="100"/>
    <menuitem id="menu_auto_test_items" name="Items" parent="menu_auto_test_root" action="action_auto_test"/>
</odoo>